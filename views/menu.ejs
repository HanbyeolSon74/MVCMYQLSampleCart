        </ul>
      </nav>

      <div>find</div>
    </header>

    <!-- main -->
    <div class="menu-container">
      <div class="menu-nav">
        <div class="category-item active">
          <img src="/public/img/dessert.webp" alt="DESSERT" />
          <span>DESSERT</span>
        </div>
        <div class="category-item">
          <img src="/public/img/beverage.webp" alt="BEVERAGE" />
          <span>BEVERAGE</span>
        </div>
        <div class="category-item">
          <img src="/public/img/HAND DIP CANDLE-1.webp" alt="MERCH" />
          <span>MERCH</span>
        </div>
      </div>

      <div class="menu-container">
        <div class="menu-content">
          <h2 class="menu-title">DESSERT(<%= products.length %>)</h2>
          <div class="filter-container">
            <div class="filter-button">FILTER</div>
          </div>
        </div>
      <div class="product-grid">
        <% products.forEach((product) => { %>
        <div
          class="product-item"
          data-category="<%= product.category.trim() %>"
        >
          <a href="/menu/<%= product.id %>">
            <img src="<%= product.imageurl %>" alt="<%= product.name %>" />
            <p class="product-name"><%= product.name %></p>
          </a>
        </div>
        <% }); %>
      </div>
    </div>

    <footer>
      <div class="footer-container">
        <ul class="social-links">
          <li><a href="#">INSTAGRAM</a></li>
          <li><a href="#">KAKAOTALK</a></li>
