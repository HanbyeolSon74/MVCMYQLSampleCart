              <li><a href="#">DOSAN</a></li>
              <li><a href="#">SEONGSU</a></li>
              <li><a href="#">SINSA</a></li>
              <li><a href="#">SHANGHAI</a></li>
            </ul>
          </li>
          <li class="menu-item">
            <a href="/menu">MENU</a>
            <ul class="submenu">
              <li><a href="#">DESSERT</a></li>
              <li><a href="#">BEVERAGE</a></li>
              <li><a href="#">MERCH</a></li>
            </ul>
          </li>
          <li class="menu-item">
            <a href="#">PROJECTS</a>
            <ul class="subproject">
              <li><a href="#">JENNIECOLLAB</a></li>
              <li><a href="#">NEWJEANSCOLLAB</a></li>
